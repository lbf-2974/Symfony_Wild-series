{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <div class="container">
    <h3 class="pt-2">Toutes les séries de la table program : </h3>
    {% for program in programs %}
        <div>
            <h6 class="mt-4">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h6>
            <p class ="h6">{{ program.synopsis }}</p>
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

    </div>
{% endblock %}